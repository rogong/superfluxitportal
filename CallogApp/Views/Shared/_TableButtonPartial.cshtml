@model int

<td>
    <div class="btn-group" role="group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@Model">
            <i class="fa fa-edit text-white"></i>
        </a>
        <a class="btn btn-success" asp-action="Details" asp-route-Id="@Model">
            <i class="fa fa-list-alt text-white"></i>
        </a>
        <a class="btn" asp-action="Delete" asp-route-Id="@Model" style="background-color:red">
            <i class="fa fa-trash text-white"></i>
        </a>
    </div>
</td>