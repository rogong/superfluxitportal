@model IEnumerable<CallogApp.Models.Approval>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <a  asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i>  Create</a>



<table class="w3l-table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requester)
            </th>

            <th>
                CRequest
            </th>

            <th>
                Beneficiary
            </th>

            <th>
                Cost
            </th>
            <th>
                Advance
            </th>


            <th>
               Status
            </th>
            <th></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Requester.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CurrentRequest)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Beneficiary)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TotalCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvanceRequired)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.ApprovedStatus.Name)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>
