@model CallogApp.Models.Call

@{
    ViewData["Title"] = "Create";
    var CreateDate = DateTime.Now;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="row">

        <div class="col-md-3"></div>
        <div class="col-md-6">
            
            <div class="w3l-table-info">
                <div class="message">@ViewBag.Message</div>
                <div class="agile-tables">
                    <h4 class="text-center text-capitalize  font-weight-bold">Create Call</h4>
                    <form asp-action="Create" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                        @Html.Hidden("CreateDate")
                        <div class="form-group">
                            <label asp-for="Caller" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <input asp-for="Caller" class="form-control" />
                                <span asp-validation-for="Caller" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="Receiver" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <input asp-for="Receiver" class="form-control" />
                                <span asp-validation-for="Receiver" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="Suject" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <input asp-for="Suject" class="form-control" />
                                <span asp-validation-for="Suject" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentId" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="IssueId" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <select asp-for="IssueId" class="form-control" asp-items="ViewBag.IssueId"></select>
                            </div>
                            <span asp-validation-for="IssueId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Note" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Note" class="form-control"></textarea>
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label asp-for="Remark" class="col-sm-2 control-label hor-form"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Remark" class="form-control"></textarea>
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>


                        </div>


                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-block btn-primary text-white m-4" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-md-3">
          
                <a asp-action="Index">Back to List</a>
           
        </div>
    </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
